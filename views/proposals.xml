<odoo>
    <data>
        <record id="tree_proposal_opp" model="ir.ui.view">
            <field name="name">proposals_opp_tree</field>
            <field name="model">proposal.opp.bb</field>
            <field name="arch" type="xml">
                <tree>

                    <field name="Company"/>
                    <field name="product_pol"/>
                    <field name="premium"/>
                    <button name="select_proposal" string="Select" class="oe_highlight" type="object"/>

                </tree>

            </field>
        </record>

        <record id="form_proposal_opp" model="ir.ui.view">
            <field name="name">proposals.opp</field>
            <field name="model">proposal.opp.bb</field>
            <field name="arch" type="xml">
                <form>
                    <div class="o_row">
                        <label for="Company"/>
                        <field name="Company"/>
                        <label for="product_pol"/>
                        <field name="product_pol"/>
                        <label for="premium"/>
                        <field name="premium"/>
                        <field name="proposal_crm" invisible="1"/>
                        <field name="show_risks_covers" invisible="1"/>
                        <field name="test" invisible="1"/>
                        <field name="group"  invisible="1"/>
                        <button name="save" string="Generate Proposal" class="oe_highlight" type="object" />

                    </div>
                    <label string="Risks" attrs="{'invisible': [('show_risks_covers', '!=', True)]}"/>
                    <field name="proposal_risks" attrs="{'invisible': [('show_risks_covers', '!=', True)]}">
                        <tree>
                            <field name="risk_id"/>
                            <field name="risk_desc"/>
                            <button name="get_covers_risk" string="View covers" class="oe_highlight" type="object"/>
                        </tree>
                        <form>
                            <group>
                                <field name="risks_covers" >
                                    <tree>
                                        <field name="check" invisible="1"  />
                                        <field name="name" attrs="{'readonly': [('check', '=', True)]}" force_save="1"  />
                                        <field name="sum_insure"  attrs="{'readonly': [('check', '=', True)]}"  force_save="1" />
                                        <field name="rate" attrs="{'readonly': [('check', '=', True)]}"  force_save="1" />
                                        <field name="net_perimum" attrs="{'readonly': [('check', '=', True)]}"   force_save="1"  />
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="check" invisible="0" />
                                            <field name="name" attrs="{'readonly': [('check', '=', True)]}"  force_save="1"  />
                                            <field name="sum_insure"  attrs="{'readonly': [('check', '=', True)]}"  force_save="1"/>
                                            <field name="rate" attrs="{'readonly': [('check', '=', True)]}"   force_save="1" />
                                            <field name="net_perimum"  attrs="{'readonly': [('check', '=', True)]}" force_save="1"/>
                                        </group>
                                    </form>

                                </field>
                            </group>
                        </form>

                    </field>
                    <label string="Covers" attrs="{'invisible': [('show_risks_covers', '!=', True)]}"/>
                    <field name="selected_risk_covers" attrs="{'invisible': [('show_risks_covers', '!=', True)]}" >
                        <tree>
                            <field name="check" invisible="1"  />
                            <field name="name" attrs="{'readonly': [('check', '=', True)]}" force_save="1"  />
                            <field name="sum_insure"  attrs="{'readonly': [('check', '=', True)]}"  force_save="1" />
                            <field name="rate" attrs="{'readonly': [('check', '=', True)]}"  force_save="1" />
                            <field name="net_perimum" attrs="{'readonly': [('check', '=', True)]}"   force_save="1"  />

                        </tree>
                    </field>
                </form>

            </field>
        </record>

        <record model="ir.ui.view" id="Risks_form">
            <field name="name">Risk Details</field>
            <field name="model">risks.opp</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Basic_info">
                        <field name="risks_crm"/>
                        <field name="risk_id"/>
                        <field name="risk_desc"/>
                        <field name="type_risk"/>
                    </group>

                    <group string="vechile"  attrs="{'invisible': ['|',('type_risk', '!=', 'vehicle')]}" >

                        <field name="Man"/>
                        <field name="model"/>
                        <field name="motor_cc"/>
                        <field name="year_of_made"/>
                    </group>



                    <group string="Person" attrs="{'invisible': ['|',('type_risk', '!=', 'person')]}" >
                        <field name="name"  />
                        <field name="DOB"  />
                        <field name="job"  />
                    </group>
                    <group string="Cargo" attrs="{'invisible': ['|',('type_risk', '!=', 'cargo')]}" >
                        <field name="From"  />
                        <field name="To"  />
                        <field name="cargo_type"  />
                        <field name="weight"  />
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>