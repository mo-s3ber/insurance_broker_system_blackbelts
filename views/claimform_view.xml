<odoo>
    <record model="ir.ui.view" id="tree_insurance_claim">
        <field name="name">tree.insurance.claim</field>
        <field name="model">insurance.claim</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="list">
                <field name="name"/>
                <field name="policy_number"/>
                <field name="endorsement"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="form_insurance_claim">
        <field name="name">form.insurance.claim</field>
        <field name="model">insurance.claim</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Idea form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group colspan="4">
                        <field name="policy_number" widget="selection"/>
                        <field name="related_policy" invisible="1"/>
                        <field name="customer_policy"/>
                        <field name="endorsement" widget="selection"/>
                        <field name="risk_object" invisible="1"/>
                        <field name="risk_person" attrs="{'invisible': [('risk_object', '!=', 'person')]}" widget="selection"/>
                        <field name="risk_vehicle" attrs="{'invisible': [('risk_object', '!=', 'vehicle')]}" widget="selection"/>
                        <field name="risk_cargo" attrs="{'invisible': [('risk_object', '!=', 'cargo')]}" widget="selection"/>
                        <field name="risk_person_model" attrs="{'invisible': [('risk_object', '!=', 'person')]}" readonly="1" force_save="1">
                            <tree>
                                <field name="name"/>
                                <field name="DOB"/>
                                <field name="job"/>
                            </tree>
                        </field>
                        <field name="risk_vehicle_model" attrs="{'invisible': [('risk_object', '!=', 'vehicle')]}" readonly="1" force_save="1">
                            <tree>
                                <field name="car_tybe"/>
                                <field name="motor_cc"/>
                                <field name="year_of_made"/>
                                <field name="model"/>
                                <field name="Man"/>
                            </tree>
                        </field>
                        <field name="risk_cargo_model" attrs="{'invisible': [('risk_object', '!=', 'cargo')]}" readonly="1" force_save="1">
                            <tree>
                                <field name="From"/>
                                <field name="To"/>
                                <field name="cargo_type"/>
                                <field name="weight"/>
                            </tree>
                        </field>
                        <field name="coverage"/>
                        <field name="claim_line">
                            <tree>
                                <field name="claim_item"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                        <field name="amount" readonly="1" force_save="1"/>
                     </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="claim_view_action" model="ir.actions.act_window">
        <field name="name">Claim</field>
        <field name="res_model">insurance.claim</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <!--&lt;!&ndash;<field name="search_view_id" ref="my_view_search_view"/>&ndash;&gt;-->
        <!--<field name='domain'>[('salesperson','=',uid)]</field>-->
        <!--<field name="context" >{'search_default_by_salesperson':1}</field>-->
    </record>
    <record id="seq_claim_details" model="ir.sequence">
        <field name="name">Insurance Claim</field>
        <field name="code">insurance.claim</field>
        <field name="prefix">CLM/</field>
        <field name="padding">3</field>
        <field name="company_id" eval="False"/>
    </record>
    <record model="ir.ui.view" id="tree_claim_item">
        <field name="name">tree.insurance.claim.item</field>
        <field name="model">insurance.claim.item</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="list">
                <field name="risk_objects"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="form_claim_item">
        <field name="name">form.insurance.claim.item</field>
        <field name="model">insurance.claim.item</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Idea form">
                <group colspan="4">
                    <separator string="Create Claim Item" colspan="2"/>
                    <field name="risk_objects"/>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>
    <record id="claim_item_view_action" model="ir.actions.act_window">
        <field name="name">Claim Item</field>
        <field name="res_model">insurance.claim.item</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
    </record>
    <record id="view_claim_line_wizard_form" model="ir.ui.view">
            <field name="name">Claim Line form</field>
            <field name="model">insurance.claim.line</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                       <field name="claim_item"/>
                       <field name="amount"/>
                        <field name="claim_object" invisible="1"/>
                       <field name="related_claim" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>

        <act_window id="claim_line_wizard_wizard"
            name="claim_line"
            src_model="insurance.claim.line"
            res_model="insurance.claim.line"
            view_mode="form"
            target="new"/>
</odoo>