<odoo>
    <data>



        <record id="tree_covers" model="ir.ui.view">
            <field name="name">covers_tree</field>
            <field name="model">name.covers</field>
            <field name="arch" type="xml">
                <tree >

                    <field name="name"   />
                    <field name="sum_insure" />
                    <field name="rate"  />
                    <field name="net_perimum" />

                </tree>

            </field>
        </record>
        <record id="my_view_for_covers_edit_cover" model="ir.ui.view">
            <field name="name">poroposal </field>
            <field name="model">name.covers</field>
            <field name="view_type">form</field>
            <field name="arch" type="xml">
                <form string="my policy poroposal">

                    <field name="check" invisible="0" />
                    <field name="name" attrs="{'readonly': [('check', '=', True)]}" force_save="1"  />
                    <field name="sum_insure"  attrs="{'readonly': [('check', '=', True)]}" force_save="1"  />
                    <field name="rate" attrs="{'readonly': [('check', '=', True)]}"  force_save="1"  />
                    <field name="net_perimum"  attrs="{'readonly': [('check', '=', True)]}" force_save="1" />

                </form>
            </field>
        </record>


    </data>
</odoo>
